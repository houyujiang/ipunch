.main-container {
  width: 750rpx;
  min-height: 100%;
  overflow-x: hidden;
}
/* 目标列表 --开始 */
.project-container {
  margin: 0 40rpx;
  margin-top: 10rpx;
  margin-bottom: 200rpx;
}

.project-container > .count {
  color: #555;
  font-weight: bold;
  font-size: 28rpx;
}

.project-container > .count > .num {
  display: inline-block;
  margin: 0 4rpx;
  color: #1976d2;
  font-weight: bolder;
  font-size: 32rpx;
}

.project {
  margin: 24rpx 0;
  padding: 24rpx;
  border-radius: 18rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 24rpx rgba(1, 74, 146, 0.493);
}

.project > .title {
  font-weight: bold;
  font-size: 32rpx;
}

.project > .tags {
  display: flex;
  margin-top: 6rpx;
}

.project > .tags > m-tag {
  margin-left: 16rpx;
}

.project > .tags > m-tag:first-child {
  margin-left: 0;
}
/* 目标列表----结束 */
/* 还没东西时的介绍 */
.desc-wrap {
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  width: 80%;
  height: 200rpx;
  margin-left: 27rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  color: rgb(43, 38, 38);
  background: rgba(238, 195, 77, 0.877);
  padding: 50rpx;
}
.none-list-show {
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.empty-img {
  width: 100%;
}
/* 还没东西时的介-end */
.desc-wrap .text {
  line-height: 2;
  font-size: 14px;
  color: #333;
}
.desc-wrap .big-text {
  line-height: 3;
  font-size: 18px;
  font-weight: bold;
}
.desc-wrap .punch-title{
  line-height: 2;
  font-size: 14px;
  color: rgb(43, 42, 42);
}
.desc-wrap .punch-content{
  line-height: 2;
  font-size: 14px;
  color:  rgb(43, 42, 42);
}
.desc-wrap .punch-time{
  line-height: 2;
  font-size: 12px;
  color:  rgb(110, 103, 103);
}
.punch-icon{
  flex-direction:row;
}

.punch-icon image{
  width: 80rpx;
  height: 80rpx;
}
/*右下角 添加项目 悬浮按钮*/
/* 创建按钮 */
.add-btn {
  position: fixed;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  margin: 32px;
  padding: 24rpx;
  width: 54px;
  height: 54px;
  border-radius: 50%;
  background-color: #6f38c9;
  box-shadow: rgba(0, 0, 0, 0.2) 0 3rpx 20rpx;
  animation: add-ani 2s infinite ease-in-out;
}
/* 创建按钮  颜色动画*/
@keyframes add-ani {
  0% {
    background-color: #8152da;
  }
  70% {
    background-color: #833dc4;
  }
  100% {
    background-color: #7e0ac2;
  }
}
.add-btn image {
  width: 80rpx;
  height: 80rpx;
}

.punch-item {
  position: relative;
  width: 100%;
  height: 270rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  color: rgb(161, 145, 145);
  background: rgb(233, 227, 227);
  overflow: hidden;
}

.punch-item .wrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: inline-flex;
  flex-direction: column;
}

.punch-item .name {
  display: block;
  padding: 40rpx 10rpx 10rpx;
  font-size: 24px;
  text-align: center;
  letter-spacing: 4rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.punch-item .btn {
  margin: 10rpx auto;
}

.punch-item .time {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
