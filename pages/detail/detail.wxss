/* pages/detail/detail.wxss */
.main-container {
  width: 750rpx;
  min-height: 100%;
  overflow-x: hidden;
  /* background:#f4f4f4; */
}
/* begin */
.header {
    display: flex;
    margin: 24rpx 40rpx;
    align-items: center;
  } 
  .header > .goal-title {
    font-size: 44rpx;
    font-weight: bold;
    line-height: 48rpx;
    min-height: 48rpx;
    vertical-align: text-top;
  }
  .header > .remove-goal {
    margin-left: auto;
    padding-left: 12px;
  } 
  .header > .remove-goal {
    width: 44rpx;
    height: 44rpx;
    flex-shrink: 0;
  } 
  .header > .edit-goal-title {
    width: 40rpx;
    height: 40rpx;
    margin-left: 16rpx;
    align-self: flex-end;
  } 
  .subtitle {
    font-size: 32rpx;
    color: #1976d2;
    font-weight: bold;
    margin: 16rpx 40rpx;
    margin-top: 40rpx;
  } 
  .sign-record {
    box-sizing: border-box;
    position: fixed;
    background-color: #bb4426;
    bottom: 17%;
    left: 40rpx;
    padding: 16rpx 30rpx;
    border-radius: 48rpx;
    box-shadow: rgba(0, 0, 0, 0.2) 0px 3rpx 20rpx;
    display: flex;
    align-items: center;
  } 
  .sign-record > image {
    width: 42rpx;
    height: 42rpx;
  } 
  .sign-record > .desc {
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 10rpx;
    padding-bottom: 4rpx;
  } 
  .share-record{
    box-sizing: border-box;
    position: fixed;
    background-color: #2ca15d;
    bottom: 17%;
    right: 40rpx;
    padding: 16rpx 30rpx;
    border-radius: 48rpx;
    box-shadow: rgba(0, 0, 0, 0.2) 0px 3rpx 20rpx;
    display: flex;
    align-items: center;
  }
  .share-record > image {
    width: 42rpx;
    height: 42rpx;
  } 
  .share-record > .desc {
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 10rpx;
    padding-bottom: 4rpx;
  } 
  .statistics-container {
    margin: 0 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  } 
  .statistics-item {
    margin-bottom: 24rpx;
    background-color: #fff;
    border-radius: 18rpx;
    padding: 24rpx;
    width: 30%;
    box-sizing: border-box;
  } 
  .statistics-item.time {
    background-color: rgba(0, 150, 136, 0.08);
  } 
  .statistics-item.longest-record {
    background-color: rgba(121, 85, 72, 0.08);
  }
  .statistics-item.recent-date {
    background-color: rgba(25, 118, 210, 0.08);
  } 
  .statistics-item > image {
    width: 48rpx;
    height: 48rpx;
  }
  .statistics-item > .title {
    font-weight: bold;
    font-size: 30rpx;
  }
  .statistics-item > .desc {
    font-size: 24rpx;
    color: #888;
  }
  .record-container {
    margin: 0 40rpx;
    margin-bottom: 160rpx;
  } 
  .record {
    border-top: 1rpx solid rgba(25, 118, 210, 0.08);
    padding: 20rpx 0;
    display: flex;
    align-items: center;
  }
  .record-duration {
    flex-shrink: 0;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  .record-duration > .num {
    font-weight: bold;
    font-size: 32rpx;
    line-height: 32rpx;
    color: #1565c0;
  }
  .record-duration > .unit {
    font-size: 24rpx;
    color: #777;
  } 
  .record-content > .record-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
    margin-right: 16rpx;
  }
/* end */
/* 日历容器 */
.calendar-container {
    width: 90%;
    margin: 0 auto;
    align-items: center;
    border-radius: 50rpx;
    box-sizing: border-box;
    background-color:rgb(71, 87, 94);
}
